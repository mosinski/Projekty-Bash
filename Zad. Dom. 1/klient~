#!/bin/sh
while true 
do
echo "\nMenu\n"
echo "0-Wyjście z programu"
echo "1-Z dzięsiętnej na Binarną"
echo "2-Z dziesiętnej na szestnastkową"

echo -n "> " 
read a

if [ $a -eq 0 ]
 then echo "Koniec Programu"; exit 4

elif [ $a -eq 1 ]
then
 echo "$a" > dane.txt;
 echo 'Wpisz liczbę dziesiętną:'
 read b
 echo "$b" > dane.txt
 WYNIK=""
 while [ $WYNIK !="" ]
 do
 WYNIK=`sed -n 1p wynik.txt`
 echo "liczba z wyniku to $WYNIK"
 done
 echo "" > dane.txt
 echo "Wynik to: $WYNIK"

elif [ $a -eq 2 ]
then
 echo "$a" > dane.txt;
 echo 'Wpisz liczbę dziesiętną:'
 read c
 ans=`echo "obase=16;$c" | bc`
 echo "$ans"

fi
done
